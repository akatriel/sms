<div class="container">
	<%= form_tag login_path do %>
		<div class="form-group">
			<%= label_tag :username %>
			<%= text_field_tag :username,"", class: "form-control" %>
		</div>
		<div class="form-group">
			<%= label_tag :password %>
			<%= password_field_tag :password, "", class: "form-control" %>
		</div>
		<%= submit_tag "Log In", class: "btn btn-default" %>
	<% end %>
</div>