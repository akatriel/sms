<div class="container">
<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul class="collection">
      <% user.errors.full_messages.each do |message| %>
        <li class="collection-item error"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <i class="material-icons prefix">account_circle</i>
    <%= f.label :username %>
    <%= f.text_field :username, class: 'active', autofocus:true %>
  </div>
  <div class="input-field">
    <i class="material-icons prefix">vpn_key</i>
    <%= f.label :password %>
    <%= f.password_field :password, class: 'active' %>
  </div>
  <div class="input-field">
    <i class="material-icons prefix">vpn_key</i>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'active' %>
  </div>
  <div class="input-field">
    <i class="material-icons prefix">email</i>
    <%= f.label :email %>
    <%= f.text_field :email, class: 'active' %>
  </div>
  <div class="input-field">
    <i class="material-icons prefix">phone</i>
    <%= f.label :phone %>
    <%= f.phone_field :phone, class: 'active' %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
