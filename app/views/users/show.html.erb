<div class="container">
	<div class="center">
		<p id="notice"><%= notice %></p>
		<p class="text-danger"></p>

		<h1> Welcome, <%= @user.username %> </h1>
		<%= link_to 'Edit User Info', edit_user_path(@user) %>
		<br>

		<hr>
		<%= form_tag @stock, remote: true do %>
			<%= label_tag :ticker, "Multiple stocks can be added by separating tickers with a comma:" %><br/>
			<%= text_field_tag :ticker,"", autofocus: true %>
			<%= submit_tag "Add", 'data-disable-with' => "Please wait.." %>
		<% end %>
		<hr>
		
			<h1>Portfolio</h1>
			<hr>
			<ul id="stocks">
				<%= render @stocks %>
			</ul>
			<% form_tag messages_path do %>
				<% submit_tag "Send SMS", class: "btn btn-primary" %>
			<% end %>
		
	</div>
</div>